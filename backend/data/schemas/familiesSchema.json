{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "description": "The unique identifier for the family"
            },
            "owner_id": {
                "type": "string",
                "description": "The unique identifier of the user in IDP"
            },
            "name": {
                "type": "string",
                "description": "The name of the family"
            },
            "members": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "description": "The unique identifier for the family's member"
                        },
                        "name": {
                            "type": "string",
                            "description": "The name of the family's member"
                        },
                        "user_id": {
                            "type": "string",
                            "description": "The unique identifier of the user in IDP"
                        },
                        "type": {
                            "type": "string",
                            "description": "The type of the member. Can be owner,adult or kid"
                        }
                    }
                }
            }
        }
    }
}